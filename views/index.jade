div(data-role='page', data-theme='b', id='index')
	include includes/header

	div(data-role='content')
		form(method='get', action='listClasses')
			div(data-role='fieldcontain')
				label(for='term') Term:
				select(name='term', id='term') !{terms}
			div(data-role='fieldcontain')
				label(for='subject', class='ui-input-text') Subject:
				select(name='subject', id='subject') !{subjects}
			input(data-theme='e', type='submit', value='Get Classes')

	include includes/footer	
